<head>
  <link rel="stylesheet" href="site.css">
  
</head>
<body class="Fixture" >
  <div class="container1">
    <img src="/AFA-removebg-preview.png" alt="Imagen 1" class="left-image">
    <h1 class="H1Fixture">FECHA 1 LIGA ARGENTINA</h1>
    <h2>LA PAGINA DE FUTBOL</h2>
    <img src="/png-transparent-football-open-graphics-ball-sports-equipment-sports-soccer-ball-removebg-preview.png" alt="">
    
    <img src="/AFA-removebg-preview.png" alt="Imagen 2" class="right-image">
    <table summary="TODOS LOS PARTIDOS DE LA LIGA ARGENTINA" class="tabla">
      <caption>
        Todas las fechas de los partidos para que las puedas disfrutar y opinar
      </caption>
      <thead>
        <tr>
          <th scope="col">Partido</th>
          <th scope="col">Equipo Local</th>
          <th scope="col">Equipo Visitante</th>
          <th scope="col">Fecha Juego</th>
        
        </tr>
      </thead>
      <tbody>
        
          @foreach (fixture item in ViewBag.Fixture1)
        {
          <tr>
        <td>@item.IdFixture</td> 
        <td>@item.equipo_local <img src="/copaliga.png" alt="" class="copa_liga"> </td> 
        <td>@item.equipo_visitante <img src="/copaliga.png" alt="" class="copa_liga"></td> 
        <td>@item.fecha_juego, @item.Hora_Partido</td>
        </tr>
        
        }
        
        
      </tbody>
      <tfoot>
        <tr>
          <th scope="row" colspan="2">Cantidad de partidos</th>
          <td colspan="2">14</td>
        </tr>
      </tfoot>
    </table>

   
  </div>
</body>


